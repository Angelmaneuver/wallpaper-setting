{
	"name": "wallpaper-setting",
	"displayName": "Wallpaper Setting",
	"description": "Set an image as the VSCode background.",
	"publisher": "",
	"version": "0.0.1",
	"homepage": "",
	"repository": {
		"type": "git",
		"url": "https://github.com/Angelmaneuver/wallpaper-setting.git"
	},
	"bugs": {
		"url": "https://github.com/Angelmaneuver/wallpaper-setting/issues"
	},
	"engines": {
		"vscode": "^1.54.0"
	},
	"icon": "./resource/icon.png",
	"categories": [
		"Other"
	],
	"keywords": [
		"background",
		"wallpaper",
		"Mac"
	],
	"activationEvents": [
		"onCommand:wallpaper-setting.imageSelect",
		"onCommand:wallpaper-setting.opacitySet",
		"onCommand:wallpaper-setting.install",
		"onCommand:wallpaper-setting.uninstall",
		"onCommand:wallpaper-setting.uninstallAll"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "wallpaper-setting.imageSelect",
				"title": "Wallpaper Setting - Image Select"
			},
			{
				"command": "wallpaper-setting.opacitySet",
				"title": "Wallpaper Setting - Opacity Set"
			},
			{
				"command": "wallpaper-setting.install",
				"title": "Wallpaper Setting - Install"
			},
			{
				"command": "wallpaper-setting.uninstall",
				"title": "Wallpaper Setting - Uninstall"
			},
			{
				"command": "wallpaper-setting.uninstallAll",
				"title": "Wallpaper Setting - Uninstall All"
			}
		],
		"configuration": {
			"title": "Wallpaper Setting",
			"properties": {
				"wallpaper-setting.filePath": {
					"type": "string",
					"default": "",
					"description": "The path of the selected image."
				},
				"wallpaper-setting.opacity": {
					"type": "number",
					"maximum": 1,
					"minimum": 0,
					"default": 0.75,
					"description": "The background image's opacity."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.54.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
